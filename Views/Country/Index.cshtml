@model CountriesViewModel
@{
    ViewBag.Title = "Country Olympics";
}
<h2>Country Olympics</h2>

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Catgegory</h3>
        <div class="list-group">
            <a asp-action="Index"
               asp-route-activeCategory="all"
               asp-route-activeGame="@Model.ActiveGame"
               class="list-group-item @Model.CheckActiveCategory("all")">
                All
            </a>
            @foreach (Category cat in Model.Categories)
            {
                <a asp-action="Index"
               asp-route-activeCategory="@cat.CategoryId"
               asp-route-activeGame="@Model.ActiveGame"
                   class="list-group-item @Model.CheckActiveCategory(cat.CategoryId)">
                    @cat.CategoryName
                </a>
            }
        </div>
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            <a asp-action="Index"
               asp-route-activeCategory="@Model.ActiveCategory"
               asp-route-activeGame="all"
               class="list-group-item @Model.CheckActiveGame("all")">
                All
            </a>
            @foreach (Game gam in Model.Games)
            {
                <a asp-action="Index"
               asp-route-activeCategory="@Model.ActiveCategory"
               asp-route-activeGame="@gam.GameId"
                   class="list-group-item @Model.CheckActiveGame(gam.GameId)">
                    @gam.GameName
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.CountryId">
                        <img style="max-width: 180px; height: auto;" src="~/images/@country.CountryFlag" alt="@country.Name"
                             title="@country.Name | @country.Category.CategoryName @country.Game.GameName" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>