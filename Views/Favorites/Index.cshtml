@model CountriesViewModel
@{
    ViewData["Title"] = "Favorites";
}

<div class="text-center">
    <h2>@(String.IsNullOrEmpty(Model.UserName) ? "My" : Model.UserName + "'s") Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" asp-controller="Country" class="btn btn-primary"
           asp-route-activeCategory="@Model.ActiveCategory"
           asp-route-activeGame="@Model.ActiveGame">
            Back to Home Page
        </a>
        <a asp-action="Index" asp-controller="Name" class="btn btn-primary">Change Name</a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites
        </button>
    </form>
    <br />
</div>

<div class="row">
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-group-item">
                    <div class="col-sm-4">
                        <img src="~/images/@country.CountryFlag" alt="" />
                    </div>
                    <div class="col-sm-4">
                        @country.Name
                    </div>
                    <div class="col-sm-4">
                        @country.Category.CategoryName @country.Game.GameName
                    </div>
                </li>
            }
        </ul>
    </div>
</div>